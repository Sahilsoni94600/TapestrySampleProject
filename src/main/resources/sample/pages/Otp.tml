<html t:type="layout" title="OTP | Login"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <t:form t:id="otpForm">
            Email Id: <t:textfield t:id="email" class="input-block-level" validate="required" placeholder="Email address"/>
            <t:submit class="btn btn-large btn-primary" value="Submit"/>
        </t:form>
    </div>
</div>
</html>